# Database Configuration
MONGO_URI=mongodb://localhost:27017/inzo-winner-app
DB_NAME=inzo-winner-app

# Server Configuration
PORT=3000
NODE_ENV=development

# Debug & Logging Configuration
# Set to 'true' to enable verbose logging throughout the application
# Default: false (production-ready minimal logging)
DEBUG_LOGGING=false

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# JWT Configuration (if using authentication)
JWT_SECRET=your_jwt_secret_here

# API Configuration
API_BASE_URL=http://localhost:3000

# File Upload Configuration
UPLOAD_DIR=./uploads
MAX_UPLOAD_SIZE=10485760

# Competition Configuration
# Number of competitions per week (1-6, Saturday is excluded)
COMPETITIONS_PER_WEEK=5

# Task Configuration
# Days available for tasks: 0 (Sunday) to 5 (Friday)
# Saturday (6) is excluded as official holiday
AVAILABLE_DAYS_COUNT=6

# Logging Notes:
# - Set DEBUG_LOGGING=true to see detailed logs including:
#   * Calendar data fetch operations
#   * Top agents statistics
#   * Question suggestions processing
#   * Task scheduling operations
#   * Agent audit logging
# - Set DEBUG_LOGGING=false for production (recommended)
# - When DEBUG_LOGGING is true, each operation logs structured data
# - When DEBUG_LOGGING is false, only critical errors are logged
